# Rate limiting zones
limit_req_zone $binary_remote_addr zone=general:10m rate=30r/m;
limit_req_zone $binary_remote_addr zone=api:10m rate=10r/m;

# Custom log format with IST timezone
log_format ist_format '$remote_addr - $remote_user [$time_iso8601] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

server {
    listen 80;
    server_name SERVER_IP;

    access_log /var/log/nginx/catlog_access.log ist_format;

    # Serve landing page on HTTP
    location /catlog {
        limit_req zone=general burst=10 nodelay;
        proxy_pass http://127.0.0.1:8008;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Original-URI $request_uri;
        
        # Remove /catlog prefix when forwarding to backend
        rewrite ^/catlog/(.*) /$1 break;
        rewrite ^/catlog$ / break;
    }

    # Handle login and logout routes
    location ~ ^/(login|logout|catlog.png) {
        limit_req zone=general burst=10 nodelay;
        proxy_pass http://127.0.0.1:8008;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location / {
        limit_req zone=general burst=10 nodelay;
        proxy_pass http://127.0.0.1:8008;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Redirect /app and secure endpoints to HTTPS
    location ~ ^/(app|ws|api) {
        return 301 https://$server_name$request_uri;
    }
}

server {
    listen 443 ssl;
    server_name SERVER_IP;

    access_log /var/log/nginx/catlog_ssl_access.log ist_format;

    ssl_certificate /etc/ssl/certs/catlog.crt;
    ssl_certificate_key /etc/ssl/private/catlog.key;
    
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    # Only serve secure endpoints on HTTPS
    location ~ ^/(app|ws|api|login|logout|catlog.png) {
        limit_req zone=api burst=5 nodelay;
        proxy_pass http://127.0.0.1:8008;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Original-URI $request_uri;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 86400;
    }

    location /catlog {
        limit_req zone=general burst=10 nodelay;
        proxy_pass http://127.0.0.1:8008;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Original-URI $request_uri;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 86400;
        
        # Remove /catlog prefix when forwarding to backend
        rewrite ^/catlog/(.*) /$1 break;
        rewrite ^/catlog$ / break;
    }

    # Redirect root to HTTP for landing page
    location = / {
        return 301 http://$server_name/;
    }
}
